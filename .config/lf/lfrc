# Setting
set nodrawbox
set info size
set ifs "\n"
set filesep "\n"
set previewer ~/.config/lf/previewer.sh
set cleaner ~/.config/lf/clear_img.sh

# Key bindings
map <enter> open
map gh cd ~
map gr cd /
map <delete> delete
map td push $mkdir<space>
map tf push $touch<space>
map <c-s> ! ~/.config/lf/rsync-here.sh

# Commands
cmd open $ open $fx
